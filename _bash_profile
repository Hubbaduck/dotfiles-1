# set the prompt (like: [user@machine:Current Directory]$)
export PS1="[\u@\h:\W]\$ "

# for tmux powerline
export PLATFORM="mac"

# fix a bug with OS X bash and EDITOR
export EDITOR=vim

# set the path, fully, manually
export PATH="$HOME/.rbenv/bin:/usr/local/share/python:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/X11/bin"

# make sure rbenv works
eval "$(rbenv init -)"

# pull in the aliases
if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi
