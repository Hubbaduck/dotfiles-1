" interface
set number
set showcmd
set ruler
 
" indenting
set tabstop=4
set shiftwidth=4
set softtabstop=4
set smartindent
set expandtab
set autoindent

" colours
syntax enable
set background=dark
colorscheme solarized

" status bar ([filename] [type] [position])
set statusline=%F%m%r%h%w\ [%Y]\ [%p%%]\ [%L]
set laststatus=2
