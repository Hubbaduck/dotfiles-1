# vim: set filetype=sh:

#
# General
#
export DOTFILES="$HOME/.dotfiles"

#
# System
#
export PLATFORM='unknown'
uname_str=$(uname)
if [[ "$uname_str" == 'Darwin' ]]; then
    export PLATFORM='osx'
elif [[ "$uname_str" == 'Linux' ]]; then
    export PLATFORM='linux'
elif [[ "$uname_str" == 'FreeBSD' ]]; then
    export PLATFORM='freebsd'
fi

#
# User
#
export EDITOR=vim

export DEBFULLNAME="Nick Charlton"
export DEBEMAIL=nick@nickcharlton.net

export VAGRANT_DEFAULT_PROVIDER=vmware_fusion

#
# Path
#
export PATH="/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/usr/bin:/usr/sbin:/sbin"

# haskell
export PATH="$HOME/.cabal/bin:$PATH"
# heroku toolbelt
export PATH="/usr/local/heroku/bin:$PATH"
# golang
mkdir -p $HOME/go # make sure it exists
export GOPATH=$HOME/go
export PATH=$PATH:$GOPATH/bin

if [[ "$PLATFORM" == "osx" ]]; then
    # xcode and xcode tools
    export XCODE="`xcode-select --print-path`"
    export PATH="$XCODE/Tools:$PATH"
    # ruby gems
    export PATH="/usr/local/opt/ruby/bin:$PATH"
    # MacTeX
    export PATH="/usr/local/texlive/2014/bin/x86_64-darwin:$PATH"
    # ruby ssl fix
    export SSL_CERT_FILE=/usr/local/opt/curl-ca-bundle/share/ca-bundle.crt
fi

#
# Secrets
#
if [ -f ~/.secrets ]; then
    source ~/.secrets
fi

